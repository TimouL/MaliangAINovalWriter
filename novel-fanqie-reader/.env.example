# .env.example - Environment Configuration Template
# 复制此文件为 .env 并填入实际的配置值

# --- Database Credentials ---
DB_NAME=recsystem_db
DB_USER=recsystem_user
DB_PASSWORD=supersecretpassword
DB_ROOT_PASSWORD=rootsecretpassword

# --- Flask Application Settings ---
FLASK_APP=app.py
FLASK_ENV=production
FLASK_SECRET_KEY=<your_strong_random_flask_secret_here>
FLASK_LOG_LEVEL=INFO

# --- JWT Authentication Settings ---
JWT_SECRET_KEY=<your_strong_random_jwt_secret_here>
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=60

# --- Timezone ---
TZ=Asia/Shanghai

# --- novel_downloader Library Configuration ---
# Worker and timeout settings
NOVEL_MAX_WORKERS=3
NOVEL_REQUEST_TIMEOUT=15
NOVEL_MAX_RETRIES=3
NOVEL_MIN_CONNECT_TIMEOUT=3.05

# Wait time settings (in milliseconds)
NOVEL_MIN_WAIT_TIME=2000
NOVEL_MAX_WAIT_TIME=5000

# Output format and file handling
NOVEL_FORMAT=epub
NOVEL_BULK_FILES=false
NOVEL_AUTO_CLEAR_DUMP=true

# Official API settings
# 推荐使用官方 API 模式，IID 留空让系统自动生成
NOVEL_USE_OFFICIAL_API=true
# IID 留空，系统会自动生成新的（有效期 12 小时）
NOVEL_IID=
NOVEL_IID_SPAWN_TIME=

# Proxy API Mode
# 注意：代理服务 https://fanqie.hnxianxin.cn 可能不可用，建议禁用
NOVEL_USE_PROXY_API=false

# ==========================================
# 注意事项：
# 1. 不要在配置值后面直接添加注释
#    错误: KEY=value# comment
#    正确: KEY=value
# 2. 注释应该独立成行
# 3. 时间相关配置的单位为毫秒
# 4. 布尔值使用 true/false (小写)
# 5. IID 会自动生成，无需手动配置
# ==========================================
